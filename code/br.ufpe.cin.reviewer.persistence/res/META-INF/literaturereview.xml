<?xml version="1.0" encoding="UTF-8" ?>

<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	<entity class="br.ufpe.cin.reviewer.model.literaturereview.LiteratureReview" name="LiteratureReview" access="PROPERTY">
		<table name="literature_reviews" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="literature_review_id" />
				<generated-value strategy="IDENTITY" />
			</id>
			
			<basic name="title">
				<column name="title" />
			</basic>
			
		    <one-to-many name="searches" fetch="LAZY" orphan-removal="true">
				<join-table name="searches" schema="reviewer">
					<join-column name="searches_id"/>
					<inverse-join-column name="literature_review_id"/>
				</join-table>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			
			<one-to-many name="critireon" fetch="LAZY" orphan-removal="true">
				<join-table name="critireon" schema="reviewer">
					<join-column name="criteria_id"/>
					<inverse-join-column name="literature_review_id"/>
				</join-table>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			
			<one-to-many name="phases" fetch="LAZY" orphan-removal="true">
				<join-table name="phases" schema="reviewer">
					<join-column name="phase_id"/>
					<inverse-join-column name="literature_review_id"/>
				</join-table>
				<cascade><cascade-all/></cascade>
			</one-to-many>	
			
		</attributes>
	</entity>	
	
</entity-mappings>
