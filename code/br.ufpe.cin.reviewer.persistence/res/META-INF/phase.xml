<?xml version="1.0" encoding="UTF-8" ?>

<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	<entity class="br.ufpe.cin.reviewer.model.phase.Phase" name="Phase" access="PROPERTY">
		<table name="phases" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="phase_id" />
				<generated-value strategy="IDENTITY" />
			</id>
			
			<one-to-many name="groups" fetch="LAZY" orphan-removal="true">
				<join-table name="groups" schema="reviewer">
					<join-column name="group_id"/>
					<inverse-join-column name="phase_id"/>
				</join-table>
				<cascade><cascade-all/></cascade>
			</one-to-many>	
					
			<one-to-many name="studyAnalisys" fetch="LAZY" orphan-removal="true">
				<join-table name="study_analisys" schema="reviewer">
					<join-column name="study_analisys_id"/>
					<inverse-join-column name="phase_id"/>
				</join-table>
				<cascade><cascade-all/></cascade>
			</one-to-many>	
			
		</attributes>
	</entity>
</entity-mappings>
			