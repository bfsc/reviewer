<?xml version="1.0" encoding="UTF-8" ?>

<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	<entity class="package br.ufpe.cin.reviewer.model.search.AutomatedSearch" name="AutomatedSearch" access="PROPERTY">
		<table name="automatedsearches" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="automatedsearch_id" />
				<generated-value strategy="IDENTITY" />
			</id>
			
			<basic name="query_string">
				<column name="query_string" />
			</basic>
			
			<one-to-many name="queryInfos" fetch="LAZY" orphan-removal="true">
				<join-table name="query_info" schema="reviewer">
					<join-column name="query_info_id"/>
					<inverse-join-column name="automatedsearch_id"/>
				</join-table>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			
		</attributes>
	</entity>
</entity-mappings>
			