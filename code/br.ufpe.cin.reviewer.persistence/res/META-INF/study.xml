<?xml version="1.0" encoding="UTF-8" ?>

<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	<entity class="br.ufpe.cin.reviewer.model.common.Study" name="Study">
		<table name="study" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="id" />
				<generated-value strategy="AUTO" />
			</id>
			
			<basic name="code">
				<column name="code" />
			</basic>
			<basic name="title">
				<column name="title" />
			</basic>
			<basic name="source">
				<column name="source" />
			</basic>
			<basic name="abstract">
				<column name="abstract" />
			</basic>
			<basic name="year">
				<column name="year" />
			</basic>
			<basic name="url">
				<column name="url" />
			</basic>
			
			<one-to-many name="studyAuthors">
				<join-column name="study_id" referenced-column-name="id"/>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			<one-to-many name="studyInstitutions">
				<join-column name="study_id" referenced-column-name="id"/>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			<one-to-many name="studyCountries">
				<join-column name="study_id" referenced-column-name="id"/>
				<cascade><cascade-all/></cascade>
			</one-to-many>
		</attributes>
	</entity>
	
	<entity class="br.ufpe.cin.reviewer.model.common.StudyAuthor" name="StudyAuthor">
		<table name="study_authors" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="id"/>
				<generated-value strategy="AUTO" />
			</id>
			
			<basic name="author">
				<column name="author"/>
			</basic>
		</attributes>
	</entity>
	
	<entity class="br.ufpe.cin.reviewer.model.common.StudyInstitution" name="StudyInstitution">
		<table name="study_institutions" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="id"/>
				<generated-value strategy="AUTO" />
			</id>
			
			<basic name="institution">
				<column name="institution"/>
			</basic>
		</attributes>
	</entity>
	
	<entity class="br.ufpe.cin.reviewer.model.common.StudyCountry" name="StudyCountry">
		<table name="study_countries" schema="reviewer" />
		<attributes>
			<id name="id">
				<column name="id"/>
				<generated-value strategy="AUTO" />
			</id>
			
			<basic name="country">
				<column name="country"/>
			</basic>
		</attributes>
	</entity>
</entity-mappings>
